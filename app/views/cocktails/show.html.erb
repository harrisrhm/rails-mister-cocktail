<h2><%= @cocktail.name %></h2>

<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to icon('far', 'trash-alt'),
    dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" } %> </li>
  <% end %>
</ul>

<%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %> |
<%= link_to 'Back', cocktails_path %>