<header class="masthead" style="background-image: url('<%= image_path 'background.jpg' %>');">
    <div class="container">
        <div class="list_cocktail">
            <%= link_to "Cocktail List", cocktail_path(@cocktails), class: "btn btn-ghost list" %>
            <div class="content">
                <ul> 
                    <% @cocktails.each do |cocktail| %>
                        <li><%= link_to cocktail.name, cocktail_path(cocktail) %> 
                    <% end %>
                </ul>
            </div>
        </div>
        <div class="add_cocktail">
            <%= link_to "Add cocktail", new_cocktail_path, class: "btn btn-ghost" %>
        </div>
    </div>
</header>